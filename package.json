{
  "name": "colorful-titlebar",
  "displayName": "Colorful Titlebar",
  "description": "A VS Code extension that adds backgroundColor(generated by your project name) to the title bar",
  "description_zh": "一个可以自动计算标题栏颜色的 VS Code 扩展，计算依据是你的项目文件夹名称、目录或日期（可自选）",
  "version": "1.4.1",
  "purpose": "vscode-extension",
  "publisher": "KasukabeTsumugi",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "titlebar",
    "color",
    "theme",
    "project",
    "workspace",
    "customization"
  ],
  "homepage": "https://github.com/baendlorel/colorful-titlebar#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/baendlorel/colorful-titlebar.git"
  },
  "bugs": {
    "url": "https://github.com/baendlorel/colorful-titlebar/issues"
  },
  "license": "MIT",
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "colorful-titlebar.controlPanel",
        "title": "%command.controlPanel.title%",
        "category": "%extension.category%"
      }
    ],
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "colorful-titlebar.akasha": {
          "type": "string",
          "default": ""
        }
      }
    }
  },
  "scripts": {
    "build": "rimraf out && rollup -c",
    "watch": "tsc -watch -p ./",
    "check": "tsc -p tsconfig.build.json",
    "test": "tsx tests/index.test.ts",
    "lint": "eslint src --ext ts",
    "package": "pnpm build && vsce package -o ./bin",
    "publish": "pnpm build && vsce publish"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.7.0",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.4",
    "rollup-plugin-const-enum": "^1.1.1",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-func-macro": "^1.1.1",
    "tsc-alias": "^1.8.16",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}